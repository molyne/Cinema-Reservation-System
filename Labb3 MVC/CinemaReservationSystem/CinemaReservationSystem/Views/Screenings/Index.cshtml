@model IEnumerable<CinemaReservationSystem.Models.Screening>

@{
    ViewData["Title"] = "Index";

}

<h2>Movies</h2>



<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Movie.Title)
                </th>
                <th>@Html.DisplayNameFor(model => model.Auditorium.Name)</th>
            <th>@Html.DisplayNameFor(model=>model.ScreeningTime)</th>
            <th>Tickets left</th>
            <th><strong>Sortby:</strong> <a asp-action="Index" asp-route-sortOrder="timeSort">@Html.DisplayNameFor(model => model.ScreeningTime)</a> | <a asp-action="Index" asp-route-sortOrder="seatSort">@Html.DisplayNameFor(model => model.ReservedSeats)</a> </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Title)
            </td>
            <td>  @Html.DisplayFor(modelItem => item.Auditorium.Name)</td>
            <td> @Html.DisplayFor(modelItem => item.ScreeningTime)</td>
            <td>@Html.DisplayFor(modelItem => item.ReservedSeats)</td>
            <td>
                <a asp-action="Book" asp-route-id="@item.Id">Book tickets</a> 
            </td>
        </tr>
}
    </tbody>
</table>
